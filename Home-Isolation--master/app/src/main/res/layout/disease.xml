<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dis_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark the applicable Diseases"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        />
    <CheckBox
        android:layout_below="@id/dis_txt"
        android:id="@+id/hy_tn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Hypertension"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/Diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hy_tn"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"

        android:text="Diabetes"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/ht_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Diabetes"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Heart Disease"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/clud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ht_ds"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Chronic Lung Disease"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/clid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clud"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Chronic Liver Disease"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/ckd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clid"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Chronic Kidney Disease"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/cvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckd"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Cerebro Vascular Disease"
        android:textSize="16sp" />
    <CheckBox
        android:id="@+id/dis_co"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvd"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:text="Disease Col"
        android:textSize="16sp" />

</RelativeLayout>
